{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "declaration": true,
    "declarationDir": "dist/types",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "typeCheck": false,
  },
  "include": ["src/**/*.ts"],
}